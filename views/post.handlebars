<div class='post'>
  <h2>{{post.title}}</h2>
  <p>Created by {{post.user.name}} on {{formatDate post.date_created}}</p>
  <p>{{post.content}}</p>
</div>

<div class='comments'>
  <h3>Comments</h3>
  {{> comments comments=post.comments}}
  {{#each post.comments}}
    <div class='comment'>
      <p>{{this.comment_text}}</p>
      <p>Posted by: {{this.user.name}}</p>
      <p>Date: {{formatDate this.date_created}}</p>
    </div>
  {{else}}
    <p>No comments yet.</p>
  {{/each}}
</div>